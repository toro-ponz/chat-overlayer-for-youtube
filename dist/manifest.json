{
  "name": "YouTube Live Overlayer",
  "description": "YouTube Live comment overlayer on stream extension.",
  "version": "1.0",
  "content_scripts": [
    {
      "css": [
        "css/app.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/app.js"
      ],
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "run_at": "document_end"
    },
    {
      "css": [
        "css/chat.css"
      ],
      "js": [
        "js/jquery.min.js",
        "js/chat.js"
      ],
      "matches": [
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/live_chat_replay*"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": "app.ico",
    "default_title": "YouTube Live Overlayer"
  },
  "manifest_version": 2
}
