{
  "manifest_version": 2,
  "name": "YouTube Live Overlayer",
  "description": "YouTube Live comment overlayer on stream extension.",
  "author": "とろゝ",
  "version": "0.9.2.2",
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "32": "icons/32.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "content_scripts": [
    {
      "css": [
        "css/app.css"
      ],
      "js": [
        "js/app.js"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ],
      "run_at": "document_end"
    },
    {
      "css": [
        "css/chat.css"
      ],
      "js": [
        "js/chat.js"
      ],
      "matches": [
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/live_chat_replay*"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "permissions": [
    "https://www.youtube.com/*"
  ]
}
