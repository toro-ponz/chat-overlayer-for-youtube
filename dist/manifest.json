{
  "manifest_version": 3,
  "name": "Chat Overlayer for YouTube™",
  "description": "Chat overlayer extension for YouTube™ powered by Web Extensions.",
  "author": "とろゝ",
  "version": "0.11.0.0",
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "32": "icons/32.png",
    "38": "icons/38.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "css": [
        "css/app.css"
      ],
      "js": [
        "js/app.js"
      ],
      "matches": [
        "https://www.youtube.com/*"
      ],
      "run_at": "document_end"
    },
    {
      "css": [
        "css/chat.css"
      ],
      "js": [
        "js/chat.js"
      ],
      "matches": [
        "https://www.youtube.com/live_chat*",
        "https://www.youtube.com/live_chat_replay*"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "action":{
    "default_icon": {
      "16": "icons/16.png"
    },
    "default_title": "disable overlay mode"
  },
  "permissions": [
    "tabs",
    "declarativeContent"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ]
}
