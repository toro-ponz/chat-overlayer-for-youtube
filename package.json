{
  "name": "app-live-overlayer",
  "version": "1.0.0",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^9.1.1",
    "local-web-server": "^2.5.6",
    "node-sass": "^4.9.2",
    "nodemon": "^1.18.3",
    "postcss": "^7.0.2",
    "postcss-cli": "^6.0.0"
  },
  "scripts": {
    "dev": "yarn run dev-css && yarn run autoprefixer",
    "prod": "yarn run prod-css && yarn run autoprefixer",
    "watch": "yarn run watch-css & yarn run watch-autoprefixer",

    "dev-css": "yarn run dev-css-app && yarn run dev-css-chat",
    "prod-css": "yarn run prod-css-app && yarn run prod-css-chat",
    "watch-css": "nodemon -e scss -x \"yarn run dev-css\"",

    "dev-css-app": "node-sass --output-style expanded --include-path scss assets/scss/app.scss bin/css/app.css",
    "prod-css-app": "node-sass --output-style compressed --include-path scss assets/scss/app.scss bin/css/app.css",
    "dev-css-chat": "node-sass --output-style expanded --include-path scss assets/scss/chat.scss bin/css/chat.css",
    "prod-css-chat": "node-sass --output-style compressed --include-path scss assets/scss/chat.scss bin/css/chat.css",

    "autoprefixer-app": "postcss --use autoprefixer --no-map -o bin/css/app.css bin/css/app.css",
    "autoprefixer-chat": "postcss --use autoprefixer --no-map -o bin/css/chat.css bin/css/chat.css",
    "autoprefixer": "yarn run autoprefixer-app && yarn run autoprefixer-chat",

    "watch-autoprefixer": "nodemon -e scss -x \"yarn run autoprefixer\""
  }
}
