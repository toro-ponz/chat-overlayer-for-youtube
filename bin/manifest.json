{
  "name": "YouTube Live Overlayer",
  "description": "YouTube Live Comment Overlay Stream Extension.",
  "version": "1.0",
  "content_scripts": [{
    "js": [
      "jquery.min.js",
      "app.js"
    ],
    "css": ["app.css"],
    "matches": [
      "https://www.youtube.com/watch*",
      "https://www.youtube.com/live_chat_replay*"
    ],
    "all_frames": true
  }],
  "browser_action": {
    "default_icon": "app.ico",
    "default_title": "YouTube Live Overlayer"
  },
  "manifest_version": 2
}
